 @model LeaveManagementSystemNew.Models.CreateLeaveReqModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Leave</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label">Employee</label>
                <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
            </div>

            <div class="form-group">
                <label asp-for="StartTime" class="control-label">Start Time</label>
                <input asp-for="StartTime" class="form-control" type="datetime-local" />
            </div>

            <div class="form-group">
                <label asp-for="LeaveDuration" class="control-label">Leave Duration</label>
                <input asp-for="LeaveDuration" class="form-control" type="number" />
            </div>

            
            
            <div class="form-group d-flex justify-content-between mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-controller="Employees" asp-action="Details" asp-route-id="@ViewBag.SelectedEmployeeId" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
